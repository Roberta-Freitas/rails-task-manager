
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<i class="fa-regular fa-square-check"></i>
<% if @task.completed %>
 <i class="fa fa-check-square-o"></i> This task is completed
<% else %>
  <i class="fa fa-square-o"></i> This task is not completed yet
<% end %>

<p><%= link_to "Back to list", tasks_path %></p>

<p><i class="fa-solid fa-trash-can"></i>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
